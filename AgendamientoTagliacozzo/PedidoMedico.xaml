<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendamientoTagliacozzo.PedidoMedico">
    <ContentPage.Content>
        <StackLayout>

            <Image Source="RIS_IBERIA.jpg"
               HeightRequest="150"
               HorizontalOptions="Center"/>


            <Frame BackgroundColor="Blue" Padding="24" CornerRadius="0">

                <Label Text="Adjuntar el pedido medico del examen y despues seleccionar horario" HorizontalTextAlignment="Center" TextColor="White"
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />


            </Frame>
            <Button x:Name="btnSeleccionarHorario" Text="Seleccionar Estudio" Clicked="btnSeleccionarHorario_Clicked"></Button>
            <Image x:Name="MiImagen"></Image>
           
            <Button x:Name="btnSeleccionarFoto" Text="Adjuntar foto pedido medico" Clicked="btnSeleccionarFoto_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>